# Area Monitoring System Configuration
# Copy this file to .env and modify as needed

# Camera Configuration
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
CAMERA_NAME=Default Camera
CAMERA_ENABLED=true

# Detection Configuration
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.5
IOU_THRESHOLD=0.3
MODEL_PATH=yolov8n.pt
USE_GPU=true

# Alert Configuration
ALERT_ENABLED=true
ALERT_SOUND_ENABLED=true
ALERT_SOUND_FILE=alert.wav
ALERT_COOLDOWN=5.0
MAX_ALERTS_PER_MINUTE=10

# Storage Configuration
SCREENSHOTS_DIR=screenshots
LOGS_DIR=logs
DATABASE_URL=sqlite:///./area_monitor.db
AUTO_SCREENSHOT=true
SCREENSHOT_COOLDOWN=5.0
RETENTION_DAYS=30

# UI Configuration
FULLSCREEN=false
SHOW_SIDEBAR=true
SHOW_ZONES=true
THEME=cyberpunk
FPS_LIMIT=30

# Application Configuration
DEBUG=false
APP_VERSION=2.0.0
USE_ENV_CONFIG=false
